    <!-- Sidebar -->
    <%- include("partials/sidebar") %>

    <!-- Show All Saved Events -->
    <div class="settings-container">
      <h2>Settings</h2>

      <!-- Tab Menu -->
      <div class="tabs">
        <button class="tab-btn active" onclick="openTab(event, 'Basic')">
          Basic
        </button>
        <button class="tab-btn" onclick="openTab(event, 'Countdown')">
          Countdown
        </button>
        <button class="tab-btn" onclick="openTab(event, 'Messages')">
          Messages
        </button>
        <button class="tab-btn" onclick="openTab(event, 'StylishBorder')">
          Stylish Border
        </button>
        <!-- <button class="tab-btn" onclick="openTab(event, 'StylishButton')">
          Stylish Button
        </button> -->
      </div>

      <!-- Tab Content -->
      <div id="Basic" class="tab-content active">
        <h3>Basic Settings</h3>

        <form action="/save-settings" method="POST">
          <div class="upper">
            <div class="setting-group">
              <label>Event Name</label>
              <div class="input-row">
                <label>Font Size (px):</label>
                <input type="number" name="eventNameSize" value="40" />
              </div>
              <div class="input-row">
                <label>Text Decoration:</label>
                <select name="eventNameDecoration">
                  <option>None</option>
                  <option>Bold</option>
                  <option>Italic</option>
                  <option>Underline</option>
                </select>
              </div>
              <div class="input-row">
                <label>Color:</label>
                <input type="color" name="eventNameColor" value="#8B4513" />
              </div>
            </div>

            <div class="setting-group">
              <label>Event Date</label>
              <div class="input-row">
                <label>Font Size (px):</label>
                <input type="number" name="eventDateSize" value="20" />
              </div>
              <div class="input-row">
                <label>Text Decoration:</label>
                <select name="eventDateDecoration">
                  <option>None</option>
                  <option>Bold</option>
                  <option>Italic</option>
                  <option>Underline</option>
                </select>
              </div>
              <div class="input-row">
                <label>Color:</label>
                <input type="color" name="eventDateColor" value="#D2691E" />
              </div>
            </div>
          </div>

          <div class="setting-group">
            <label>Times</label>
            <div class="time-settings">
              <div class="time-group">
                <label>Opening</label>
                <div class="input-row">
                  <label>Font Size (px):</label>
                  <input type="number" name="openingSize" value="20" />
                </div>
                <div class="input-row">
                  <label>Text Decoration:</label>
                  <select name="openingDecoration">
                    <option>None</option>
                    <option>Bold</option>
                    <option>Italic</option>
                    <option>Underline</option>
                  </select>
                </div>
                <div class="input-row">
                  <label>Color:</label>
                  <input type="color" name="openingColor" value="#008000" />
                </div>
              </div>

              <div class="time-group">
                <label>Closing</label>
                <div class="input-row">
                  <label>Font Size (px):</label>
                  <input type="number" name="closingSize" value="20" />
                </div>
                <div class="input-row">
                  <label>Text Decoration:</label>
                  <select name="closingDecoration">
                    <option>None</option>
                    <option>Bold</option>
                    <option>Italic</option>
                    <option>Underline</option>
                  </select>
                </div>
                <div class="input-row">
                  <label>Color:</label>
                  <input type="color" name="closingColor" value="#FF0000" />
                </div>
              </div>
            </div>
          </div>

          <div class="button-group">
            <button type="submit" class="save-btn">Save Settings</button>
            <button type="reset" class="reset-btn">Restore Defaults</button>
          </div>
        </form>
      </div>

      <!-- 2nd Countdown Page -->
