          <input type="number" value="25" />
          <input type="number" value="25" />
          <input type="number" value="25" />
          <input type="number" value="25" />
        </div>

        <div class="buttons">
          <button class="save-btn">Save Settings</button>
          <button class="restore-btn">Restore Defaults</button>
        </div>
      </div>

