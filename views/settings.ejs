          </div>

          <div class="settings-group">
            <h3>Letter "S"</h3>
            <label>Font Size (px)</label>
            <input type="number" value="18" />
            <select>
              <option>None</option>
            </select>
            <input type="color" value="#800000" />
          </div>
        </div>
        <div class="countain-buttons">
          <button class="save-btn">Save Settings</button>
          <button class="restore-btn">Restore Defaults</button>
        </div>
      </div>

      <!-- 2nd Countdown Page -->
      <div id="Messages" class="tab-content">
